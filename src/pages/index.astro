---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import Button from "../components/Button.astro"
---

<Layout title="Fylo">
	<main>
		<section class="grid place-items-center mt-12">
			<Image class="max-sm:w-4/5" src='/images/illustration-intro.png' alt='hero image' height={200} width={500}/>
			<div class="grid place-items-center w-[80%] my-7 px-2">
				<h2 class=" text-2xl text-center font-bold mb-4">All your files in one secure location, accessible anywhere.</h2>
				<p class="text-center w-full text-sm md:w-[26.5rem] ">Fylo stores all your most important filies in one secure location. Access them wherever you need, share and collaborate with friends family, and co-worker.</p>
				<!-- <p class="text-center text-sm w-[85%]"></p> -->
			</div>
		</section>
		<Button />
	</main>
</Layout>

