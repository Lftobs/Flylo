---
import { Image } from 'astro:assets';
interface Props {
	content: string;
	name: string;
	img: string;
	role: string;
}

const { content, name, img, role } = Astro.props;
---

<div class="max-w-[21rem] bg-bg-intro p-6  hover:shadow-2xl hover:shadow-blue-100 min-[768px]:w-auto  max-md:w-11/12">
	<p class="text-sm mb-5 font-openSans ">{content}</p>
	<div class="flex gap-2">
		<Image class="rounded-full max-h-[40px]" src={img} alt='profile-pic' height={10} width={40}/>
		<div class="grid">
			<h2 class="font-bold font-raleway mb-0">{name}</h2>
			<small class=" text-xs opacity-50 mt-0" >{role}</small>
		</div>
		
	</div>
</div>



